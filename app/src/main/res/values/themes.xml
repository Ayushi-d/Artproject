<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Art_Stationary" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/nutinosemibold</item>
        <item name="fontFamily">@font/nutinosansblack</item>
        <item name="fontFamily">@font/nutinoregular</item>
        <item name="fontFamily">@font/nutinonormal</item>
        <item name="fontFamily">@font/nutinoextrabold</item>
        <item name="fontFamily">@font/nutinobold</item>
        <item name="fontFamily">@font/popinsmedium</item>
        <item name="fontFamily">@font/popinsbold</item>
        <item name="fontFamily">@font/verlaroundregular</item>
        <item name="fontFamily">@font/monstaregular</item>
       <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinnericon</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/popinsmedium</item>
    </style>
</resources>