<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imagesbook"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/custombookimage"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/darkgreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/imagesbook"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txt_days"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:gravity="center"
            android:fontFamily="@font/popinsbold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txt_daysname"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Days"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="8dp"
            app:layout_constraintTop_toBottomOf="@id/txt_days"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txt_hours"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="07"
            android:textSize="15dp"
            android:gravity="center"
            android:fontFamily="@font/popinsbold"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_days"
            app:layout_constraintRight_toLeftOf="@id/txt_minuts"/>

        <TextView
            android:id="@+id/txt_hoursname"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:textSize="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/txt_days"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_days"
            app:layout_constraintRight_toLeftOf="@id/txt_minutsname"
            />

        <TextView
            android:id="@+id/txt_minuts"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="22"
            android:textSize="15dp"
            android:gravity="center"
            android:fontFamily="@font/popinsbold"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_seconds"/>

        <TextView
            android:id="@+id/txt_minutsname"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Minuts"
            android:textSize="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/txt_minuts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_secondsname"/>

        <TextView
            android:id="@+id/txt_seconds"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="43"
            android:gravity="center"
            android:fontFamily="@font/popinsbold"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/txt_secondsname"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Seconds"
            android:gravity="center"
            android:textSize="8dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/txt_seconds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>